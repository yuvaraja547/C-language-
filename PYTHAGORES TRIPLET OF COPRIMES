
#include<stdio.h>
#include<stdbool.h>
bool coprime(int i,int j)
{
    return gcd(i,j) ==1;
    
}
int gcd(int i,int j)
{
    int temp;
    while(j!=0)
    {
        temp=j;
        j=i%j;
        i=temp;
        
    }
    return i;
}
void main()
{
    int num;
    printf("enter the number:\n");
    scanf("%d",&num);
    for(int i=5;i<num;i++)
    {
        for(int j=4;j<i;j++)
        {
            for(int k=3;k<j;k++)
            {
                if((k*k+j*j==i*i) &&coprime(i,j)&&coprime(j,k)&&coprime(i,k))
                printf("%d %d %d \n",i,j,k);
            }
        }
    }
}
